<NavigationItem>:
    IconLeftWidget:
        icon: root.icon
    
    Container:
        MDIconButton:
            icon: root.icon2
    
<Content>:
    adaptive_height: True    

    RecycleView:
        id: rv
        key_viewclass: 'viewclass'
        key_size: 'height'

        RecycleBoxLayout:
            padding: dp(10)
            default_size: None, dp(48)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    MDGridLayout:
        cols: 2
        adaptive_height: True

        RelativeLayout:
            Image:
                id: avatar
                size_hint: None, None
                size: "100dp", "100dp"
                source: "images/fillMurray100x100.jpg"
                pos: 0,0
                
            MDFloatingActionButton:
                id:open_file
                pos: 69, 0
                icon: "pencil"
                user_font_size: "8sp"
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                md_bg_color: 98/255.0, 88/255.0, 177/255.0, 1

        MDGridLayout:
            rows: 4
            row_force_default: True
            row_default_height: 24

            MDLabel:
                size_hint: None, None
                size: "100dp", "20dp"
                markup: True
                text: "[color=6258B1]Fill Murray[/color]"
                font_style: "Caption"
                font_size: "16sp"
                size_hint_y: None
                height: self.texture_size[1]
            
            MDLabel:
                markup: True
                text: "Cuenta: [b][color=6258B1].fill-murray[/color][/b]"
                font_style: "Caption"
                size_hint_y: None
                height: self.texture_size[1]

            MDLabel:
                markup: True
                text: "Nofiticationes: [b][color=6258B1]      3[/color][/b]"
                font_style: "Caption"
                size_hint_y: None
                height: self.texture_size[1]
            
            MDLabel:
                markup: True
                text: "Mensajes nuevos: [b][color=6258B1]2[/color][/b]"
                font_style: "Caption"
                size_hint_y: None
                height: self.texture_size[1]
    
    MDBoxLayout:
        ScrollView:
            DrawerList:
                id: md_list

    MDGridLayout:
        rows: 2
        adaptive_height: True

        MDBoxLayout:
            adaptive_height: True

            MDLabel:
                markup: True
                text: "[color=6258B1]Light mode[/color]"

            MDSwitch:
                thumb_color: 98/255.0, 88/255.0, 177/255.0, 1
                thumb_color_down: 98/255.0, 88/255.0, 177/255.0, 1
                pos_hint: {'center_x': 0, 'center_y': 0.5}     

        MDTextButton:
            adaptive_height: True
            markup: True
            text: "[color=6258B1]Sign out[/color]"
            pos: 0.5,0

Screen:
    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        md_bg_color: 98/255.0, 88/255.0, 177/255.0, 1
        title: "NavigationDrawer"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

    NavigationLayout:  
        x: toolbar.height

        ScreenManager:
            id: screen_manager

        MDNavigationDrawer:
            id: nav_drawer
        
            ContentNavigationDrawer:
                id: content_drawer